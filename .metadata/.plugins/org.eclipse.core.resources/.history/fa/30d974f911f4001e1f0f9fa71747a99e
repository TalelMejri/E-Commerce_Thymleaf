package com.mycompany.product.service;

import com.mycompany.product.model.MyUser;
import com.mycompany.product.repository.MyUserRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.Optional;

@Service
public class MyUserService {
    private final MyUserRepository MyuserRepository;

    @Autowired
    public MyUserService(MyUserRepository MyuserRepository) {
        this.MyuserRepository = MyuserRepository;
    }

    public MyUser registerUser(String username, String password, String email) {
        if (username != null && password != null) {
            // Cr√©er un nouvel utilisateur et le sauvegarder
            MyUser myuser = new MyUser();
            myuser.setUsername(username);
            myuser.setPassword(password);
            myuser.setEmail(email);
            return MyuserRepository.save(myuser);
        } else {
            // Retourner null si username ou password est null
            return null;
        }
    }

    public MyUser authenticate(String username, String password) {
        return MyuserRepository.findByUsernameAndPassword(username, password).orElse(null);


    }
}
